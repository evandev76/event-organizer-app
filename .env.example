# Backend
NODE_ENV=development
PORT=5173
PUBLIC_BASE_URL=http://localhost:5173

# Postgres (Prisma)
# Example (Homebrew Postgres or docker-compose):
# DATABASE_URL=postgresql://kifekoi:kifekoi@localhost:5432/kifekoi?schema=public
DATABASE_URL=

# Sessions (cookie httpOnly)
SESSION_SECRET=change-me-please
SESSION_COOKIE_NAME=kifekoi_session

# Password reset (mailer)
# In dev we can log reset links; in prod configure a provider.
MAILER_MODE=console
# RESEND_API_KEY=
# POSTMARK_SERVER_TOKEN=
# SENDGRID_API_KEY=
MAIL_FROM=no-reply@example.com
